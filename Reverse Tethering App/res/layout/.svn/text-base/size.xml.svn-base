<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Check this box on the home page if you want to limit the download size of the page. A pop-up with four options will come up, prompting you for a general size. Don't check it if you don't care about size"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text=" Ok " />

</RelativeLayout>