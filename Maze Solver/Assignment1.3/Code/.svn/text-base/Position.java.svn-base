package Code;

/**
 * Stores the x and y coordinates, to be used to simplify maze design some.
 * @author Jeff
 *
 */
public class Position {
	public int xCoord;
	public int yCoord;
	
	public Position(int x, int y)
	{
		this.xCoord = x;
		this.yCoord = y;
	}
	
	/**
	 * A getter on xCoord
	 * @return
	 */
	public int getxCoord()
	{
		return this.xCoord;
	}
	
	/**
	 * A getter on yCoord
	 * @return
	 */
	public int getyCoord()
	{
		return this.yCoord;
	}
}
